<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lenovo.demo1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntentActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".IntentActivityTestOther"
            android:label="@string/app_name" />
        <activity android:name=".IntentActivityTestOther1">
            <intent-filter>
                <action android:name="com.example.lenovo.demo1.MY_ACTION" /> <!-- 字符串可以自定义，最好按照一定的规则。 -->
                <category android:name="android.intent.category.DEFAULT" /> <!-- 这是默认会自动添加的category，加不加上都一样。 -->
                <category android:name="com.example.lenovo.demo1.MY_CATEGORY" /> <!-- 字符串可以自定义，最好按照一定的规则。 -->
            </intent-filter>
        </activity>
        <activity android:name=".IntentActivityTestOther2">
            <intent-filter tools:ignore="AppLinkUrlError"> <!-- 可以使用此代码忽视错误。 -->
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntentAndResultActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".IntentAndResultActivityTestOther"
            android:label="@string/app_name" />
        <activity
            android:name=".IntentAndImgResultActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".LifeCycleActivityTest"
            android:label="@string/app_name" />
        <activity android:name=".NormalActivity" />
        <activity
            android:name=".ChatScreenActivity"
            android:label="This is ChatScreenActivity" />
        <activity
            android:name=".ActivityStartModeTest"
            android:label="This is StandardActivity" />
        <activity
            android:name=".SingleTopActivityTest"
            android:label="This is SingleTopActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".SingleTaskActivityTest"
            android:label="This is SingleTaskActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".SingleInstanceActivityTest"
            android:label="This is SingleInstanceActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".SimpleChatActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".LinearLayoutActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".RelativeLayoutActivityTest"
            android:label="@string/app_name" />
        <activity
            android:name=".PercentLayoutActivityTest"
            android:label="@string/app_name" />
        <activity android:name=".StaticFragmentActivityTest" />
        <activity android:name=".IntentActivityTestOther3" />
        <activity android:name=".ActivityRecovery" />
        <activity android:name=".ActivityCollectorTest" />
        <activity android:name=".CommonComponentsTest" />
        <activity android:name=".LinearLayoutTest1" />
        <activity android:name=".LinearLayoutTest2" />
        <activity android:name=".LinearLayoutTest3" />
        <activity android:name=".LinearLayoutTest4" />
        <activity android:name=".RelativeLayoutTest1" />
        <activity android:name=".RelativeLayoutTest2" />
        <activity android:name=".FrameLayoutTest1" />
        <activity android:name=".DynamicFragmentLayout"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"/>
        <activity android:name=".Main2Activity"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"></activity>
    </application>

</manifest>